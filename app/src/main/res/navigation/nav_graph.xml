<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mendelin.tmdb_hilt.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.mendelin.tmdb_hilt.ui.movies.MoviesFragment"
        android:label="MoviesFragment"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_moviesFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/tvShowsFragment"
        android:name="com.mendelin.tmdb_hilt.ui.tv_shows.TvShowsFragment"
        android:label="TvShowsFragment"
        tools:layout="@layout/fragment_tv_shows" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.mendelin.tmdb_hilt.ui.favorites.FavoritesFragment"
        android:label="FavoritesFragment"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.mendelin.tmdb_hilt.ui.movie_details.MovieDetailsFragment"
        android:label="MovieDetailsFragment"
        tools:layout="@layout/fragment_movie_details">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/moviesNowPlayingFragment"
        android:name="com.mendelin.tmdb_hilt.ui.movies_now_playing.MoviesNowPlayingFragment"
        android:label="fragment_movies_now_playing"
        tools:layout="@layout/fragment_movies_now_playing">
        <action
            android:id="@+id/action_moviesNowPlayingFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/moviesPopularFragment"
        android:name="com.mendelin.tmdb_hilt.ui.movies_popular.MoviesPopularFragment"
        android:label="fragment_movies_popular"
        tools:layout="@layout/fragment_movies_popular">
        <action
            android:id="@+id/action_moviesPopularFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/moviesUpcomingFragment"
        android:name="com.mendelin.tmdb_hilt.ui.movies_upcoming.MoviesUpcomingFragment"
        android:label="fragment_movies_upcoming"
        tools:layout="@layout/fragment_movies_upcoming">
        <action
            android:id="@+id/action_moviesUpcomingFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/tvOnTheAirFragment"
        android:name="com.mendelin.tmdb_hilt.ui.tv_shows_on_the_air.TvOnTheAirFragment"
        android:label="fragment_tv_on_the_air"
        tools:layout="@layout/fragment_tv_on_the_air" />

    <fragment
        android:id="@+id/tvPopularFragment"
        android:name="com.mendelin.tmdb_hilt.ui.tv_shows_popular.TvPopularFragment"
        android:label="fragment_tv_popular"
        tools:layout="@layout/fragment_tv_popular" />

    <fragment
        android:id="@+id/tvTopRatedFragment"
        android:name="com.mendelin.tmdb_hilt.ui.tv_shows_top_rated.TvTopRatedFragment"
        android:label="fragment_tv_top_rated"
        tools:layout="@layout/fragment_tv_top_rated" />

    <fragment
        android:id="@+id/tvShowDetailsFragment"
        android:name="com.mendelin.tmdb_hilt.ui.tv_show_seasons.TvShowSeasonsFragment"
        android:label="TvShowDetailsFragment"
        tools:layout="@layout/fragment_tv_show_seasons">
        <argument
            android:name="tvShowName"
            app:argType="string" />
        <argument
            android:name="tvShowId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/personFragment"
        android:name="com.mendelin.tmdb_hilt.ui.person.PersonFragment"
        android:label="PersonFragment"
        tools:layout="@layout/fragment_person" >
        <argument
            android:name="personId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/tvShowSeasonFragment"
        android:name="com.mendelin.tmdb_hilt.ui.tv_show_season_episodes.TvShowSeasonEpisodesFragment"
        android:label="TvShowSeasonFragment"
        tools:layout="@layout/fragment_tv_show_season_episodes">
        <argument
            android:name="tvShowName"
            app:argType="string" />
        <argument
            android:name="tvShowId"
            app:argType="integer" />
        <argument
            android:name="season"
            app:argType="integer" />
    </fragment>

</navigation>